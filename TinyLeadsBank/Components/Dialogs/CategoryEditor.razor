@namespace TinyLeadsBank.Components.Pages.Dialogs
@using TinyLeadsBank.Data.TestBank
@inject IDialogService dialogService
@inject TestBankService testService

<MudDialog>
    <DialogContent>
        <MudSimpleTable Striped Bordered>
            <tbody>
                <tr>
                    <td><MudTextField @bind-Value="AddString" /></td>
                    <td>
                        <MudButton Variant="Variant.Filled" Color="Color.Info" OnClick="Add" Disabled="string.IsNullOrEmpty(AddString)">Add</MudButton>
                    </td>
                </tr>
                @foreach (string cat in Categories)
                {
                    <tr>
                        <td>
                            @cat
                        </td>
                        <td>
                            <MudIconButton Icon="@Icons.Material.TwoTone.DeleteForever" Color="Color.Error" OnClick="() => Delete(cat)" />
                        </td>
                    </tr>
                }
            </tbody>
        </MudSimpleTable>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Default">Cancel</MudButton>
        <MudButton OnClick="Submit" Variant="Variant.Filled" Color="Color.Info">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string? CatString { get; set; }
    private string? AddString { get; set; }
    private void Delete(string cat)
    {
        Categories.Remove(cat);
    }
    private void Add()
    {
        if (!string.IsNullOrEmpty(AddString))
        {
            Categories.Add(AddString);
            AddString = null;
        }
    }
    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (CatString != null)
            Categories = CatString.Split("|").ToList();
    }
    private List<string> Categories { get; set; } = [];
    void Submit()
    {
        if (Categories.Count == 0)
            CatString = null;
        else
            CatString = string.Join("|",Categories);
        MudDialog.Close(DialogResult.Ok(CatString));
    }
    void Cancel() => MudDialog.Close(DialogResult.Cancel());
}